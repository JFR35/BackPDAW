        package "controller" <<Spring Beans>> #..# {
        [AuthController]
        [RoleController]
        [UserController]
        }
        package "service" <<Spring Beans>> #..# {
        [MyUserServiceImpl]
        [RoleServiceImpl]
        }
        package "repository" <<Spring Beans>> #..# {
        [MyUserRepository]
        [RoleRepository]
        }
        package "security" <<Spring Beans>> #..# {
